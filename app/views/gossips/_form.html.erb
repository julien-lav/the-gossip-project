<%= form_with(model: gossip, local: true) do |form| %>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, id: :gossip_content %>
  </div>

  <div class="field">
    <%= form.label :anonymous_author_id %>
    <%= form.number_field :anonymous_author_id, id: :gossip_anonymous_author_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
